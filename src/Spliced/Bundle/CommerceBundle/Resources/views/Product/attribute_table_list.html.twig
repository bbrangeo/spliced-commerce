<table class="table table-striped table-bordered table-condensed product-attribute-table product-list-attribute-table">
				<tbody>
					<tr>
						<th>Part Number</th>
						<td>{{ product.sku }}</td>
					</tr>
		    		{% for attribute in product.attributes %}
						{% if attribute.option.onList %}
							{% set i = 1 %}
			    			{% for value in attribute.values %}
			    				{% if i == 1 %}
			    					<tr>
			    						<th width="{{ width is defined ? width : '40%' }}">{{ attribute.option.publicLabel }}</th>
			    						<td>{{ value.value }}</td>
			    					</tr>
			    					{% set i = 2 %}
			    				{%  else %}
			    					<tr>
			    						<th></th>
			    						<td>{{ value.value }}</td>
			    					</tr>
			    				{% endif %}
			    			{% endfor %}
			    		{% endif %}
		    		</tr>
		    	{% endfor %}
		    	{% if partNumbers is defined %}
		    	    <tr>
		    	        <th>Part Numbers</th>
		    	        <td>
    		    	        <ul class="unstyled">
    		    	        {% for partNumber in partNumbers %}
    		    	            <li>{{ partNumber }}</li>
    		    	        {% endfor %}
    		    	        </ul>
		    	        </td>
		    	    </tr>
		    	{% endif %}
	</tbody>
</table>
