<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="spliced.commerce.product_type_manager.class">Spliced\Component\Commerce\Product\ProductTypeManager</parameter>
        <parameter key="spliced.commerce.product_type_handler.physical.class">Spliced\Component\Commerce\Product\TypeHandler\PhysicalTypeHandler</parameter>
        <parameter key="spliced.commerce.product_type_handler.digital.class">Spliced\Component\Commerce\Product\TypeHandler\DigitalTypeHandler</parameter>
    </parameters> 

    <services>
       
        <service id="commerce.product_type_manager" class="%spliced.commerce.product_type_manager.class%">
        </service>

        <!-- 
         PRODUCT TYPE HANDLERS
       	-->
        <service id="commerce.product_type_handler.physical" class="%spliced.commerce.product_type_handler.physical.class%">
	        <tag name="commerce.product_type_handler" />
        </service>
        
        <service id="commerce.product_type_handler.digitial" class="%spliced.commerce.product_type_handler.digital.class%">
	        <tag name="commerce.product_type_handler" />
        </service>
    </services>

</container>